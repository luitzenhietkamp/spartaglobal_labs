@page
@model lab_83_asp_core_add_records.Pages.InjectedCustomersModel
@{
    ViewData["Title"] = "InjectedCustomers";
}

<h2>Injected Customers</h2>

<h3>Add Customer</h3>

<div>
    <form method="post">
        <div class="form-group">
            <label for="customerID">Customer ID</label>
            <input asp-for="customer.CustomerID" type="text" class="form-control" id="customerID" placeholder="ZYX2A" />
        </div>
        <div class="form-group">
            <label for="customerName">Name</label>
            <input asp-for="customer.ContactName" type="text" class="form-control" id="customerName" placeholder="Name" />
        </div>
        <div class="form-group">
            <label for="companyName">Name</label>
            <input asp-for="customer.CompanyName" type="text" class="form-control" id="companyName" placeholder="Name" />
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input asp-for="customer.City" type="text" class="form-control" id="City" placeholder="City" />
        </div>
        <label>Company</label>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Customer ID</th>
        <th>Company Name</th>
        <th>Contact Name</th>
    </tr>
    @foreach (var customer in Model.customers)
    {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.CompanyName</td>
            <td>@customer.CompanyName</td>
        </tr>
    }
</table>